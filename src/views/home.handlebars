{{#if user}}
<h1>bienvenido {{user}}</h1>
{{/if}}
<label class="pt-5 ms-5" for="bebidas">categoria:</label>
    <select id="category" name="category">
        <option value="">seleccione una categoria</option>
        <option value="gaseosa">Gaseosa</option>
        <option value="destilados">Destilados</option>
        <option value="cerveza">Cerveza</option>
        <option value="vino">Vino</option>
    </select>
<label for="ordenar">ordenar:</label>
    <select id="ordenar" name="ordenar" id="">Ascendente
        <option value="1">Descendente</option>
        <option value="-1">Ascendente</option>
    </select>
    <button class="filter" onclick="filter()">Filtrar</button>
    <a href="/">Limpiar</a>
<div class="d-flex flex-wrap ms-4">
{{#each docs}}
    <div class="card card__container" style="width: 18rem;">
        <img height="300" src={{this.thumbnail}} class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">${{this.price}}</p>
            {{#if this.status}}
            <p class="card-text">Disponible: {{{this.stock}}}</p>
            {{else}}
            <p class="card-text">Sin stock</p>
            {{/if}}
            <div class="diiv">
                <a class="detalles" href="/detail/{{{this._id}}}" >Detalles</a>
                <button id="addCart" onclick="addCart('{{{this._id}}}')"  class="addcart">Agregar al carrito</button>
            </div>
            
        </div>
    </div>
{{/each}}
</div>
<div class="ms-5 mb-5">
    {{#if hasPrevPage}}
        <a class="ms-2" href={{prevLink}}>anterior</a>
    {{/if}}

     {{#if hasPrevPage}}
        <a class="ms-2" href={{prevLink}}>{{prevPage}}</a>
    {{/if}}

        <a class="ms-2" href={{nextLink}}>{{page}}</a>
    {{#if hasNextPage}}
        <a class="ms-2" href={{nextLink}}>{{nextPage}}</a>
    {{/if}}

    {{#if hasNextPage}}
        <a class="ms-2" href={{nextLink}}>siguiente</a>
    {{/if}}
    
</div>





